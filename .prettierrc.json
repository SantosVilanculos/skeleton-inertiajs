{
    "arrowParens": "avoid",
    "overrides": [
        {
            "files": ["./**/*.blade.php"],
            "options": {
                "parser": "blade"
            }
        },
        {
            "files": ["./**/*.yml"],
            "options": {
                "tabWidth": 2
            }
        }
    ],
    "plugins": ["prettier-plugin-blade", "prettier-plugin-organize-imports", "prettier-plugin-tailwindcss"],
    "printWidth": 120,
    "singleQuote": true,
    "tabWidth": 4,
    "tailwindFunctions": ["clsx", "cn"],
    "tailwindStylesheet": "./resources/css/app.css",
    "trailingComma": "none"
}
